<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewPaperActivity" 
    android:orientation="vertical" 
    android:background="@color/lblue">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="试题："
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <ProgressBar
            android:id="@+id/progressBarvp1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <WebView
                android:id="@+id/textViewvp1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="试题" 
                android:background="@color/white"/>
        </LinearLayout>
        
    </ScrollView>
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_weight="2"
             >
        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
                    <TextView
                         android:id="@+id/textViewvp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="您的答案："
        android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewvp2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="答案" />

        </LinearLayout>
        </ScrollView>

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginLeft="2dp"
             android:layout_weight="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
                    <TextView
                         android:id="@+id/textViewvp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="参考答案："
        android:textAppearance="?android:attr/textAppearanceLarge" />

            <WebView
                android:id="@+id/textViewvp4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:text="答案" />

        </LinearLayout>
    </ScrollView>
 </LinearLayout>
</LinearLayout>