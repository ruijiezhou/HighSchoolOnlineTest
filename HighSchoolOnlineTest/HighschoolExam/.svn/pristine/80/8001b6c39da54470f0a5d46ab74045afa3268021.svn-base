<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/home_vertical_margin"
    android:paddingLeft="@dimen/home_horizontal_margin"
    android:paddingRight="@dimen/home_horizontal_margin"
    android:paddingTop="@dimen/home_vertical_margin"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@drawable/light_blue" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/home_vertical_margin"
        android:paddingLeft="@dimen/home_horizontal_margin"
        android:paddingRight="@dimen/home_horizontal_margin"
        android:paddingTop="@dimen/home_vertical_margin" >

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/home_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_cell_background"
            android:text="@string/menu_home_exercise"
            android:textColor="@color/white" 
            android:textSize="@dimen/home_textsize" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/home_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_cell_background"
            android:text="@string/menu_home_exam"
            android:textColor="@color/white" 
            android:textSize="@dimen/home_textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        android:paddingLeft="@dimen/home_horizontal_margin"
    	android:paddingRight="@dimen/home_horizontal_margin"
        android:paddingTop="@dimen/home_vertical_margin" 
        android:paddingBottom="@dimen/home_vertical_margin">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/home_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_cell_background"
            android:text="@string/menu_home_history"
            android:textColor="@color/white"  
            android:textSize="@dimen/home_textsize"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/home_horizontal_margin"
            android:layout_weight="1"
            android:background="@drawable/menu_cell_background"
            android:text="@string/menu_home_userinfo"
            android:textColor="@color/white" 
            android:textSize="@dimen/home_textsize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        android:paddingLeft="@dimen/home_horizontal_margin"
    	android:paddingRight="@dimen/home_horizontal_margin"
        android:paddingTop="@dimen/home_vertical_margin" 
        android:paddingBottom="@dimen/home_vertical_margin">



 

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_weight="1"
        android:paddingLeft="@dimen/home_horizontal_margin"
    	android:paddingRight="@dimen/home_horizontal_margin"
        android:paddingTop="@dimen/home_vertical_margin" 
        android:paddingBottom="@dimen/home_vertical_margin">

    </LinearLayout>
   
</LinearLayout>
  
  
  